{
  "manifest_version": 3,
  "name": "aIrrange",
  "version": "1.2",
  "description": "Arranges whatever you might be interested looking at!",
  "permissions": ["storage"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["all.html", "all.js", "all.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
